    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script id="app-script">
      // Navigation
      document.addEventListener('DOMContentLoaded', function() {
        // Page navigation
        const pages = document.querySelectorAll('.page');
        const navLinks = document.querySelectorAll('.nav-link');
        
        function showPage(pageId) {
          pages.forEach(page => {
            page.classList.add('hidden');
          });
          document.getElementById(pageId + '-page').classList.remove('hidden');
          window.scrollTo(0, 0);
        }
        
        navLinks.forEach(link => {
          link.addEventListener('click', function() {
            const pageId = this.getAttribute('data-page');
            showPage(pageId);
          });
        });
        
        // Show home page by default
        showPage('home');
        
        // Pet details view
        const viewDetailsButtons = document.querySelectorAll('.view-details');
        viewDetailsButtons.forEach(button => {
          button.addEventListener('click', function() {
            const petId = this.getAttribute('data-id');
            showPage('pet-details');
            
            // In a real app, we would fetch pet details using the petId
            console.log('Viewing pet details for pet ID:', petId);
          });
        });
        
        // Back button
        document.getElementById('back-to-search').addEventListener('click', function() {
          showPage('search');
        });
        
        // Contact for adoption button
        document.getElementById('contact-for-adoption').addEventListener('click', function() {
          showPage('contact');
        });
        
        // Initialize Swiper
        const swiper = new Swiper(".mySwiper", {
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
          },
          navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
          },
        });
        
        // Contact form validation
        const contactForm = document.getElementById('contact-form');
        const nameInput = document.getElementById('name');
        const emailInput = document.getElementById('email');
        const phoneInput = document.getElementById('phone');
        const messageInput = document.getElementById('message');
        const formLoader = document.getElementById('form-loader');
        const formSuccess = document.getElementById('form-success');
        
        contactForm.addEventListener('submit', function(event) {
          event.preventDefault();
          
          // Reset error messages
          document.querySelectorAll('.error-message').forEach(el => {
            el.classList.add('hidden');
          });
          
          let isValid = true;
          
          // Validate name
          if (!nameInput.value.trim()) {
            document.getElementById('name-error').classList.remove('hidden');
            isValid = false;
          }
          
          // Validate email
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!emailRegex.test(emailInput.value)) {
            document.getElementById('email-error').classList.remove('hidden');
            isValid = false;
          }
          
          // Validate phone
          const phoneRegex = /^\+?[0-9]{8,15}$/;
          if (!phoneRegex.test(phoneInput.value)) {
            document.getElementById('phone-error').classList.remove('hidden');
            isValid = false;
          }
          
          // Validate message
          if (!messageInput.value.trim()) {
            document.getElementById('message-error').classList.remove('hidden');
            isValid = false;
          }
          
          if (isValid) {
            // Show loader
            formLoader.classList.remove('hidden');
            
            // Simulate form submission
            setTimeout(function() {
              formLoader.classList.add('hidden');
              formSuccess.classList.remove('hidden');
              contactForm.reset();
              
              // Hide success message after 5 seconds
              setTimeout(function() {
                formSuccess.classList.add('hidden');
              }, 5000);
            }, 1500);
          }
        });
        
        // File upload handling
        const fileInput = document.getElementById('pet-images');
        const dropArea = document.getElementById('drop-area');
        const preview = document.getElementById('image-preview');
        const maxFiles = 5;
        let files = [];
        
        // Prevent default drag behaviors
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
          dropArea.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
          e.preventDefault();
          e.stopPropagation();
        }
        
        // Highlight drop area when item is dragged over it
        ['dragenter', 'dragover'].forEach(eventName => {
          dropArea.addEventListener(eventName, highlight, false);
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
          dropArea.addEventListener(eventName, unhighlight, false);
        });
        
        function highlight() {
          dropArea.classList.add('border-purple-500');
        }
        
        function unhighlight() {
          dropArea.classList.remove('border-purple-500');
        }
        
        // Handle dropped files
        dropArea.addEventListener('drop', handleDrop, false);
        
        function handleDrop(e) {
          const dt = e.dataTransfer;
          const newFiles = [...dt.files];
          handleFiles(newFiles);
        }
        
        fileInput.addEventListener('change', function() {
          handleFiles([...fileInput.files]);
        });
        
        function handleFiles(newFiles) {
          // Limit to maxFiles
          const remainingSlots = maxFiles - files.length;
          newFiles = newFiles.slice(0, remainingSlots);
          
          if (newFiles.length === 0) return;
          
          newFiles.forEach(file => {
            // Validate file type
            if (!file.type.match('image.*')) return;
            
            // Validate file size (25MB max)
            if (file.size > 25 * 1024 * 1024) return;
            
            files.push(file);
            
            const reader = new FileReader();
            
            reader.onload = function(e) {
              const index = files.indexOf(file);
              
              const div = document.createElement('div');
              div.className = 'preview-item';
              div.innerHTML = `
                <img src="${e.target.result}" alt="Preview">
                <span class="preview-remove" data-index="${index}">&times;</span>
                <div class="progress-bar">
                  <div class="progress"></div>
                </div>
              `;
              
              preview.appendChild(div);
              
              // Add event listener to remove button
              div.querySelector('.preview-remove').addEventListener('click', function() {
                const index = parseInt(this.getAttribute('data-index'));
                removeFile(index);
              });
              
              // Simulate upload progress
              simulateProgress(div.querySelector('.progress'));
            };
            
            reader.readAsDataURL(file);
          });
          
          // Reset the input
          fileInput.value = '';
        }
        
        function removeFile(index) {
          files.splice(index, 1);
          preview.innerHTML = '';
          
          // Re-render previews with updated indices
          files.forEach((file, i) => {
            const reader = new FileReader();
            
            reader.onload = function(e) {
              const div = document.createElement('div');
              div.className = 'preview-item';
              div.innerHTML = `
                <img src="${e.target.result}" alt="Preview">
                <span class="preview-remove" data-index="${i}">&times;</span>
              `;
              
              preview.appendChild(div);
              
              // Add event listener to remove button
              div.querySelector('.preview-remove').addEventListener('click', function() {
                const index = parseInt(this.getAttribute('data-index'));
                removeFile(index);
              });
            };
            
            reader.readAsDataURL(file);
          });
        }
        
        function simulateProgress(progressBar) {
          let width = 0;
          const interval = setInterval(function() {
            if (width >= 100) {
              clearInterval(interval);
            } else {
              width += 5;
              progressBar.style.width = width + '%';
            }
          }, 100);
        }
        
        // Publish form submission
        const publishForm = document.getElementById('publish-form');
        
        publishForm.addEventListener('submit', function(event) {
          event.preventDefault();
          
          // Simple validation
          const petName = document.getElementById('pet-name-input').value;
          const petType = document.getElementById('pet-type-input').value;
          const termsChecked = document.getElementById('terms-checkbox').checked;
          
          if (!petName || !petType || !termsChecked || files.length === 0) {
            alert('Por favor, completa todos los campos obligatorios y sube al menos una imagen.');
            return;
          }
          
          // Simulate form submission with upload progress
          preview.querySelectorAll('.progress').forEach(progress => {
            progress.style.width = '0%';
          });
          
          preview.querySelectorAll('.progress-bar').forEach(bar => {
            bar.style.display = 'block';
          });
          
          // Simulate progress for each file
          let uploads = 0;
          preview.querySelectorAll('.progress').forEach(progress => {
            simulateProgress(progress);
            uploads++;
          });
          
          // Show success message after "upload" completes
          setTimeout(function() {
            alert('¡Mascota publicada con éxito!');
            publishForm.reset();
            files = [];
            preview.innerHTML = '';
            showPage('home');
          }, 3000);
        });
        
        // Apply filters in search page
        document.getElementById('apply-filters').addEventListener('click', function() {
          const petType = document.getElementById('pet-type-filter').value;
          const petAge = document.getElementById('pet-age-filter').value;
          const petSize = document.getElementById('pet-size-filter').value;
          
          // In a real app, we would filter pets based on these values
          console.log('Filtering pets:', { type: petType, age: petAge, size: petSize });
          
          // For the prototype, just show a message
          alert('Filtros aplicados. En una aplicación real, se mostrarían las mascotas filtradas.');
        });
      });
    </script>
  </body>
</html>
